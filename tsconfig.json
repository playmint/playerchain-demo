{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "noEmit": true,
        "checkJs": true,
        "allowJs": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": ["**/*.mjs", "**/*.js", "**/*.ts"],
    "exclude": ["./node_modules", "./dist"]
}
